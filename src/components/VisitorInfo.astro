    // å»¶è¿Ÿå‡½æ•°ï¼Œç”¨äºåœ¨ä¸¤æ¬¡é‡è¯•ä¹‹é—´ç­‰å¾…
    const delay = (ms) => new Promise(resolve => setTimeout(resolve, ms));

    const fetchIpInfo = async () => {
        setInfo('os', getOS());
        setInfo('browser', getBrowser());

        const MAX_RETRIES = 10;
        const RETRY_DELAY = 1000; // æ¯æ¬¡é‡è¯•å‰ç­‰å¾…1ç§’
        const API_URL = 'https://ip.skymail.bio';

        for (let attempt = 1; attempt <= MAX_RETRIES; attempt++) {
            try {
                console.log(`Attempt ${attempt} to fetch from ${API_URL}`);
                const response = await fetch(API_URL);

                if (!response.ok) {
                    throw new Error(`Response not OK (status: ${response.status})`);
                }

                const data = await response.json();
                
                // å‡è®¾æˆåŠŸçš„æ•°æ®ä¸€å®šåŒ…å« ip å­—æ®µ
                if (data && data.ip) {
                    console.log('Successfully fetched IP info:', data);
                    const finalData = { 
                        ip: data.ip, 
                        location: `${data.country || ''}, ${data.city || ''}`, 
                        isp: data.isp, 
                        lat: data.latitude, 
                        lon: data.longitude 
                    };

                    // æ›´æ–°UI
                    setInfo('ip-address', finalData.ip);
                    setInfo('location', finalData.location || 'N/A');
                    setInfo('isp', finalData.isp || 'N/A');
                    
                    if (finalData.lat && finalData.lon) {
                        const dist = calculateDistance(BLOGGER_LAT, BLOGGER_LON, finalData.lat, finalData.lon);
                        setInfo('distance', `çº¦ ${dist} å…¬é‡Œ`);
                    } else {
                        setInfo('distance', 'æ— æ³•è®¡ç®—');
                    }
                    
                    // æˆåŠŸåå¿…é¡»ç«‹å³é€€å‡ºå‡½æ•°ï¼Œä¸å†é‡è¯•
                    return; 
                }
                // å¦‚æœå“åº”æˆåŠŸä½†æ•°æ®æ ¼å¼ä¸å¯¹ï¼Œä¹Ÿç®—ä½œä¸€æ¬¡å¤±è´¥
                throw new Error('Invalid data format received');

            } catch (error) {
                console.error(`Attempt ${attempt} failed:`, error.message);
                
                // å¦‚æœè¿™ä¸æ˜¯æœ€åä¸€æ¬¡å°è¯•ï¼Œåˆ™ç­‰å¾…ä¸€æ®µæ—¶é—´å†è¿›è¡Œä¸‹ä¸€æ¬¡
                if (attempt < MAX_RETRIES) {
                    await delay(RETRY_DELAY);
                }
            }
        }

